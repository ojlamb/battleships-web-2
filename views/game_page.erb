<h1>Hello, <%= @name %>! Let the games begin!</h1>

<h2>Enter firing coordinates!</h2>
<form action="fire_shot" method="post">
  <input type="text" name="coordinates"></input>
  <input type="submit" value="FIRE!"></input>
</form>

<div>
  <h1>Opponent's Board</h1>
  <pre> <%= $game.own_board_view $game.player_2 %> </pre>
</div>

<div>
  <h1>My Board</h1>
  <pre> <%= $game.own_board_view $game.player_1 %> </pre>
</div>

<% if @hit == true && @sunk == true %>
  <h3>HIT!! Ship Sunk!</h3>
<% elsif @hit == true %>
  <h3>HIT!!</h3>
<% elsif @hit == false%>
  <h3>MISS!!<h3>
<% else %>
  <h3>Try a Shot!</h3>
<% end %>

<% if @already_shot_there == true %>
  <h3>(You ALREADY SHOT THERE!!!)</h3>
<% end %>